set mineOreType @copper
set stdout message1
set stderr message1

mine:

	find_ore:
		ulocate ore mineOreType ore.x ore.y ore.exists
		jump no_ore equal ore.exists true
		jump move_unit_to_ore always
	
	move_unit_to_ore:


no_ore:
	print "[red]No ore of type "
	print mineOreType
	print " found!"
	printflush stderr